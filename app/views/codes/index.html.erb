<h1>Listing codes</h1>

<table>
  <thead>
    <tr>
      <th>Source</th>
      <th>Language</th>
      <th>Cases</th>
      <th>Uid</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @codes.each do |code| %>
      <tr>
        <td><%= code.source %></td>
        <td><%= code.language %></td>
        <td><%= code.cases %></td>
        <td><%= code.uid %></td>
        <td><%= link_to 'Show', code %></td>
        <td><%= link_to 'Edit', edit_code_path(code) %></td>
        <td><%= link_to 'Destroy', code, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

